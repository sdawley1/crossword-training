#:kivy 2.2.0

<FancyButton@Button>
    font_size: 48
    font_name: "../fonts/Dream-Orphans.otf"
    background_color: (0.0, 0.0, 1.0, .5)
    # on_press: self.color_update

<NewBoxLayout>:
    # Initialize canvas to be greyish and fit the entire window (fitting it to the window is the bane of my existence)
    canvas.before:
        Color:
            rgba: (1, 1, 1, 0.5) 
        Rectangle:
            pos: self.pos
            size: self.size

<CrosswordGame>:
